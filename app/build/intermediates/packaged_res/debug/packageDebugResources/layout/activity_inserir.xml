<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FB">

    <ImageView
        android:id="@+id/background_city"
        android:layout_width="409dp"
        android:layout_height="280dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/city" />

    <LinearLayout
        android:id="@+id/entrada_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="42dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/car"
            android:layout_width="329dp"
            android:layout_height="156dp"
            android:layout_marginBottom="28dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/car" />

        <EditText
            android:id="@+id/editPlaca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:background="@drawable/border"
            android:hint="Placa do veículo (ex: ABC1234)"
            android:inputType="text"
            android:padding="14dp" />

        <Button
            android:id="@+id/botaoEntrada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#D7DEFF"
            android:padding="16dp"
            android:text="Registrar Entrada"
            android:textAllCaps="false"
            android:textColor="#393C63"
            android:textSize="18sp" />

        <Button
            android:id="@+id/botaoSaida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#B2BFFF"
            android:padding="16dp"
            android:text="Registrar Saída"
            android:textAllCaps="false"
            android:textColor="#393C63"
            android:textSize="18sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
